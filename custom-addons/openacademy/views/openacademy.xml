<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record model="ir.ui.view" id="view_form_course">
      <field name="name">course.form</field>
      <field name="model">openacademy.course</field>
      <field name="arch" type="xml">
        <form string="Form Kelas Training">
          <sheet>
            <group>
              <field name="name" />
            </group>
            <notebook>
              <page string="Description">
                <field name="description" />
              </page>
              <page string="About">
                Contoh notebook
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="view_search_course">
      <field name="name">course.search</field>
      <field name="model">openacademy.course</field>
      <field name="arch" type="xml">
        <search>
          <field name="name" />
          <field name="description" />
        </search>
      </field>
    </record>

    <record model="ir.actions.act_window" id="action_list_course">
      <field name="name">Kelas-Kelas</field>
      <field name="res_model">openacademy.course</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">Tambahkan kelas untuk pertama kalinya</p>
      </field>
    </record>

    <menuitem id="menu_utama_openacademy" name="Open Academy" />
    <menuitem id="menu_openacademy" name="Open Academy"
      parent="menu_utama_openacademy" />
    <menuitem id="menu_course" name="Kelas-kelas"
      parent="menu_openacademy"
      action="action_list_course" />
  </data>
</odoo>
